<div class="product_show">
  <h1> <%= @product.name  %> </h1>
  <img src="<%= @product.url %>">
  <p> Price: <%= @product.money_amount %> </p>
  <p> Quantity: <%= @product.quantity %></p>
  <p> Description: <%= @product.description %></p><br>
  <%= link_to "Add to Cart", add_to_carts_path(@product), method: :put  %>
</div>
