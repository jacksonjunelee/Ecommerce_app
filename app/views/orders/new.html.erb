<h1> Checkout </h1>
<%= form_for @order, url: summary_orders_path, method: :get do |f| %>
  <%= f.label :firstname %>:
  <%= f.text_field :firstname %><br />

  <%= f.label :lastname %>:
  <%= f.text_field :lastname %><br />

  <%= f.label :address %>:
  <%= f.text_field :address %><br />

  <%= f.label :state %>:
  <%= f.text_field :state %><br />

  <%= f.label :city %>:
  <%= f.text_field :city %><br />

  <%= f.label :zipcode %>:
  <%= f.text_field :zipcode %><br />

  <%= f.label :total %>:
  <%= f.text_field :total %><br />

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <%= f.submit %>
<% end %>
