<%= form_for @order, url: path, method: method, role: "form" do |f| %>
  <div class="form-group">
    <%= f.label :firstname %>:
    <%= f.text_field :firstname, class: "form-control", readonly: boolean %><br />
  </div>

  <div class="form-group">
    <%= f.label :lastname %>:
    <%= f.text_field :lastname, class: "form-control", readonly: boolean %><br />
  </div>

  <div class="form-group">
    <%= f.label :address %>:
    <%= f.text_field :address, class: "form-control", readonly: boolean %><br />
  </div>

  <div class="form-group">
    <%= f.label :state %>:
    <%= f.text_field :state, class: "form-control", readonly: boolean %><br />
  </div>

  <div class="form-group">
    <%= f.label :city %>:
    <%= f.text_field :city, class: "form-control", readonly: boolean %><br />
  </div>

  <div class="form-group">
    <%= f.label :zipcode %>:
    <%= f.text_field :zipcode, class: "form-control", readonly: boolean %><br />
  </div>

  <div class="form-group">
    <%= f.label :total %>:
    <%= f.text_field :total, class: "form-control", readonly: true %><br />
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <%= f.submit button %>
<% end %>
